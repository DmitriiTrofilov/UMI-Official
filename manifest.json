{
  "manifest_version": 3,
  "name": "Umi.ai Query & Summarizer",
  "version": "2.1",
  "description": "Supercharge your browser with AI. Summarize, explain, or humanize any text, and analyze pages or documents.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "Query.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "A_logo_for_Umi_Query_Summarizer.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}